@{
    ViewData["Title"] ="Movie Application";
}

@model MovieApp_kncook.Models.ApplicationResponse

<h1>Add a Movie</h1>



<div>
    <form method="post">
        <label asp-for="Category">Category: </label>
        <input asp-for="Category" /><br />

        <label asp-for="Title">Title: </label>
        <input asp-for="Title" /><br />

        <label asp-for="Director">Director: </label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Rating: </label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG13">PG-13</option>
            <option value="R">R</option>
            <option value="UR">UR</option>
            <option value="NR">NR</option>
        </select><br />

        <label asp-for="Edited">Edited: </label>
        <input asp-for="Edited" type="radio" name="Edited" value="" checked="checked" hidden="hidden"><br />
        <input asp-for="Edited" type="radio" name="Edited" value="yes"> Yes<br />
        <input asp-for="Edited" type="radio" name="Edited" value="no"> No<br />


        @*        <select asp-for="Edited">
            <option value=""></option>
            <option value="yesEdit">Yes</option>
            <option value="noEdit">No</option>
        </select><br />*@

        <label asp-for="LentTo">Lent To: </label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Note">Note: </label>
        <input asp-for="Note" /><br />

        <button type="submit">Submit Application</button>
        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</div>